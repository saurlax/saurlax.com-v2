<style>
  :root {
    /* color */
    --color-primary: #1e7eaa;
    --color-primary-hover: #1274a1;
    --color-disabled: #bdbdbd;
    --color-panel: #ffffff;
    --color-empty: #f3f3f3;
    --color-white: #ffffff;
    --color-dark: #212121;
    --text: #212121;
    --text-dashed: #aaaaaa;
    --color-border: #e2e2e2;
    --color-hr: #757575;
    --color-latent: #bdbdbd;
    --color-hover: #828282;
    --color-shadow: #212121;
    --color-danger: #ff4d4f;
    --color-danger-hover: #ff7875;

    /* layout */
    --header-height: 500px;
    --header-background: url("https://gimg2.baidu.com/image_search/src=http%3A%2F%2Fpic1.win4000.com%2Fwallpaper%2F2018-01-10%2F5a55b29e06143.jpg&refer=http%3A%2F%2Fpic1.win4000.com&app=2002&size=f9999,10000&q=a80&n=0&g=0n&fmt=auto?sec=1660524290&t=37d86153a763b6f3afa143a1d1d6c827");

    -webkit-tap-highlight-color: transparent;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    color: var(--text);
    background-color: var(--color-empty);
    font-size: 14px;
    text-size-adjust: 100%;
    font-family: "BlinkMacSystemFont", "Segoe UI", "Roboto", "Helvetica Neue", "Arial", "Noto Sans", "sans-serif", "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
  }

  body.dark {
    --color-empty: #212121;
    --text: #ffffff;
    --text-dashed: #757575;
    --color-border: #303030;
    --color-panel: #131313;
    --color-hover: #bdbdbd;
    --color-latent: #828282;
  }

  body.dark img {
    filter: brightness(80%);
  }

  body.dark header {
    background-image: linear-gradient(#00000044, #00000044), var(--header-background);
  }

  ::-webkit-scrollbar {
    background-color: var(--color-border);
    width: 4px;
    height: 4px;
  }

  ::-webkit-scrollbar-thumb {
    border-radius: 2px;
    background-color: var(--color-latent);
  }

  ::-webkit-scrollbar-thumb:hover {
    background-color: var(--color-hover);
  }

  @media screen and (max-width:600px) {
    :root {
      --header-height: 300px;
    }

    .header-title {
      font-size: 1.8rem !important;
    }
  }

  ::selection {
    color: var(--color-white);
    background-color: var(--color-primary);
  }

  a {
    color: var(--color-primary);
    text-decoration: none;
    cursor: pointer;
  }

  a:hover {
    color: var(--color-primary-hover);
  }

  hr {
    border: none;
    border-top: 1px dashed var(--color-hr);
  }

  button {
    outline: none;
    border: none;
    padding: 4px 12px;
    color: var(--color-white);
    background-color: var(--color-primary);
    text-shadow: 0 -1px #0000001f;
    border-radius: 2px;
    user-select: none;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  button:hover,
  button:focus {
    background-color: var(--color-primary-hover);
  }

  button.danger {
    background-color: var(--color-danger);
  }

  button.danger:hover,
  button.danger:focus {
    background-color: var(--color-danger-hover);
  }

  button.disabled {
    background-color: var(--color-disabled);
    cursor: not-allowed;
  }

  input,
  textarea {
    outline: none;
    padding: 4px 8px;
    border: 1px solid var(--color-border);
    border-radius: 2px;
    font-family: inherit;
    color: var(--text);
    background-color: var(--color-panel);
    transition: border-color 0.3s ease;
  }

  input:hover,
  input:focus,
  textarea:hover,
  textarea:focus {
    border-color: var(--color-primary);
  }

  select {
    color: var(--text);
    padding: 4px 8px;
    outline: none;
    border: 1px solid var(--color-border);
    border-radius: 2px;
    background-color: var(--color-white);
    transition: all 0.3s ease;
    cursor: pointer;
  }

  select:hover,
  select:focus {
    border-color: var(--color-primary);
  }

  /* layout */
  header {
    position: relative;
    padding: 0 20px;
    height: var(--header-height);
    color: var(--color-white);
    text-align: center;
    word-break: break-all;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    background-size: cover;
    background-position: center;
    background-image: var(--header-background);
    box-shadow: 0 0 4px var(--color-shadow);
    text-shadow: 0 0 10px var(--color-shadow);
  }

  .header-title {
    font-size: 2.2rem;
    font-weight: bold;
  }

  #header-background {
    position: absolute;
    pointer-events: none;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  #header-background div {
    position: absolute;
    display: inline-block;
    background-color: #ffffff66;
    width: var(--size);
    height: var(--size);
    left: var(--left);
    bottom: -20px;
    border-radius: var(--size);
    animation: header-background-bubble-rising var(--duration) linear var(--delay) infinite;
  }

  @keyframes header-background-bubble-rising {
    from {
      bottom: -20px;
    }

    to {
      bottom: var(--height);
      opacity: 0;
    }
  }

  .content {
    margin: auto;
    max-width: 1000px;
    background-color: var(--color-panel);
    box-shadow: 0 0 4px var(--color-latent);
  }

  footer {
    margin-top: 40px;
    font-size: 0.8rem;
    padding-top: 20px;
    padding-bottom: 60px;
    text-align: center;
    color: var(--text-dashed);
    background-color: var(--color-dark);
  }

  footer a {
    color: inherit;
  }

  footer a:hover {
    color: inherit;
    text-decoration: underline;
  }

  .footer-hr {
    width: 600px;
    max-width: 80vw;
  }

  .floating-menu {
    position: fixed;
    z-index: 100;
    right: 12px;
    bottom: 12px;
  }

  .floating-menu div {
    color: var(--color-primary);
    margin: 6px;
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    border-radius: 36px;
    box-shadow: 0 2px 4px #888888;
    background-color: var(--color-white);
    cursor: pointer;
  }

  #floating-menu-to-edge svg {
    transition: transform 0.3s ease;
  }

  #floating-menu-to-edge.reverse svg {
    transform: rotate(180deg);
  }

  #floating-menu-dark .outline {
    display: none;
  }

  body.dark #floating-menu-dark .outline {
    display: initial;
  }

  body.dark #floating-menu-dark .filled {
    display: none;
  }

  .tips {
    padding: 20px;
    text-align: center;
  }
</style>